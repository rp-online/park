      {{ vorspann }}
    </p>
    {% if credittext != '' %}
      <p class="author">
        <span itemprop="author">{{ credittext }}</span>
      </p>
    {% endif %}

    {% block body_article_bodyParagraphs %}
      {% for paragraph in body %}
        {{ paragraph.html|raw }}
      {% endfor %}
