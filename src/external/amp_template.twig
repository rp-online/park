  {% block head_appendChildren %} {% endblock %}
</head>
<body>
{% block body_prependChildren %} {% endblock %}
<amp-sidebar id="sidebar"
             layout="nodisplay"
             side="right"
             class="sidebar">
  <h6>Themen</h6>
  <ul>
    {% for element in navigation %}
      <li><a href="{{ element.href }}">{{ element.text }}</a></li>
    {% endfor %}
  </ul>
</amp-sidebar>
<amp-analytics type="infonline" id="infonline">
  <script type="application/json">
    {
      "vars": {
        "st": "{{ ivw_mobil_st }}",
        "co": "{{ baseurl_canonical }}",
        "cp": "{{ ivw.cp }}"
      },
      "requests": {
        "url": "{{ ivw_requests_url }}"
      }
    }
  </script>
</amp-analytics>
{% if gtm_id is defined and gtm_id != '' and gtm_htmlfile != '' %}
  <amp-analytics type="infonline" id="infonlinegtm">
    <script type="application/json">
      {
        "vars": {{ data_layer|raw }},
        "requests": {
          "url": "{{ gtm_htmlfile }}",
          "pageview": "${url}?platform=amp&gtm=${gtm}&referer=${externalReferrer}&title=${title}&ressort=${ressort}&subressort=${subressort}&dossier=${dossier}&contentType=${contentType}&author=${author}&date=${date}&datePublished=${datePublished}&dateModified=${dateModified}&daysSincePublication=${daysSincePublication}&origin=${origin}&analyticsUrl=${analyticsUrl}&isPremiumContent=${analyticsUrl}"
        }
      }
    </script>
  </amp-analytics>
{% endif %}

{% if linkpulse is defined and linkpulse != '' %}
  {% set section = section != '' ? section : (config.dataLayer.dossier is defined ? config.dataLayer.dossier : config.dataLayer.ressort) %}
  <amp-analytics type="linkpulse">
    <script type="application/json">
      {
        "vars": {
          "id"      : "{{ linkpulse }}",
          "pageUrl" : "{{ baseurl_full }}",
          "title"   : {{ pagetitle|json_encode()|raw }},
          "section" : {{ section|json_encode()|raw }},
          "channel" : "amp",
          "type"    : "{{ contentType_raw }}",
          "image"   : "{{ siteurl }}{{ metaImage.src }}"
        }
      }
    </script>
  </amp-analytics>
{% endif %}

{% if gtm_id is not defined and analytics1 is defined and analytics1 != '' %}
  <amp-analytics type="googleanalytics" id="analytics1">
    <script type="application/json">
      {
        "vars": {
          "account": "{{ analytics1 }}"
        },
        "extraUrlParams": {
          "cd10": "AMP"
        },
        "triggers": {
          "trackPageviewWithCustomData": {
            "on": "visible",
            "request": "pageview",
            "vars": {
              "title": {{ pagetitle|json_encode()|raw }},
              "documentLocation": "{{ baseurl_full }}"
            }
          }
        }
      }
    </script>
  </amp-analytics>
{% endif %}
{% if gtm_id is not defined and analytics2 is defined and analytics2 != '' %}
  <amp-analytics type="googleanalytics" id="analytics2">
    <script type="application/json">
      {
        "vars": {
          "account": "{{ analytics2 }}"
        },
        "extraUrlParams": {
          "cd10": "AMP"
        },
        "triggers": {
          "trackPageviewWithCustomData": {
            "on": "visible",
            "request": "pageview",
            "vars": {
              "title": {{ pagetitle|json_encode()|raw }},
              "documentLocation": "{{ baseurl_full }}"
            }
          }
        }
      }
    </script>
  </amp-analytics>
{% endif %}
{% if vgwort_ic_oeffentlich != '' %}
  <amp-pixel src="{{ vgwort_pixel_url }}" layout="nodisplay"></amp-pixel>
{% endif %}

{% block main_header %}
  <header class="amp-header">
    <a href="{{ siteurl }}/?utm_source=Google&utm_medium=amp&utm_campaign=header" target=_blank class='amp-header-oe'><span class="amp-header-logo"></span></a>
    {% if activatePartnerLink %}
    <a href="{{ partner_link }}" class="amp-header-partner"><amp-img src="{{ partner_logo }}" alt="Partner von RP ONLINE" width="134" height="17" /></a>
    {% endif %}
    <div role="button" on="tap:sidebar.toggle" tabindex="0" class="hamburger amp-header-menuswitch">☰</div>
  </header>
{% endblock %}
<main>
  {% block pre_article %} {% endblock %}
  <article>
