      <strong class="kicker">{{ dachzeile }}</strong>
      <h1 class="articleheadline">{{ titel }}</h1>
    </header>
    <amp-image-lightbox id="lightbox1" layout="nodisplay"></amp-image-lightbox>

    {% if coverHtml != null %}{{ coverHtml|raw }}{% endif %}

    <div class="share-buttons">
      {% if fb_app_id %}
        <amp-social-share type="facebook" data-param-app_id="{{ fb_app_id }}"></amp-social-share>
      {% endif %}
      <amp-social-share type="whatsapp"></amp-social-share>
      <amp-social-share type="twitter"></amp-social-share>
      <amp-social-share type="email"></amp-social-share>
    </div>

    <p class="entrySummary">
      {% if artikelmarkierung != '' %}<span class="exclusiv">{{ artikelmarkierung }}</span>{% endif %}
